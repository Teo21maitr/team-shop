{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "bash build.sh"
    },
    "deploy": {
        "startCommand": "daphne -b 0.0.0.0 -p $PORT teamshop.asgi:application",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}